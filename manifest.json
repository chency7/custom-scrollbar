{
  "manifest_version": 3,
  "name": "自定义滚动条样式",
  "name__MSG_locale__": "Custom Scrollbar Style",
  "version": "1.0.0",
  "description": "自定义网页滚动条样式，支持自定义宽度、颜色和动画效果",
  "description__MSG_locale__": "Customize webpage scrollbar style with custom width, colors and animation effects",
  "author": "Your Name",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/scrollbar.css"],
      "js": ["scripts/content.js"]
    }
  ],
  "options_page": "options.html",
  "homepage_url": "https://github.com/YourUsername/custom-scrollbar",
  "minimum_chrome_version": "88"
}
